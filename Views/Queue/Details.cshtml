@model Черга.Models.Queue

@{
    ViewData["Title"] = "Details";
}

<h1>Черга @Model.Name</h1>

<div>
    @* <h4>@Model.Name</h4> *@
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Назва
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-2">
            Час початку пари
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.EnabledDate)
        </dd>
        <dt class = "col-sm-2">
            Тип визначення порядку
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Type)
        </dd>
        <dt class = "col-sm-2">
            Група
        </dt>
        <dd class = "col-sm-10">
            @if (Model.Group != null)
            {
                @Html.DisplayFor(model => model.Group.Name)
            }
            else
            {
                <span>No Group</span>
            }
        </dd>
        <h2>Учасники</h2>
        <table class="table">
            <thead>
                <tr>
                    <th>Номер</th>
                    <th>Ім'я</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var (index, member) in Model.Entries.Select((item, index) => (index + 1, item)))
                {
                    <tr>
                        <td>@index</td>
                        <td>@member.User.FirstName @member.User.LastName</td>
                        @* <td>@member.User.LastName</td> *@
                        @* <td>@member.Email</td> *@
                    </tr>
                }
            </tbody>
        </table>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id">Редагувати</a> |
    <a asp-action="Index">Повернутися до списку</a>
</div>
